<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.valvesoftware.android.steam.community"
    android:versionCode="1328177"
    android:versionName="HOLO 1.8" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission
        android:name="com.valvesoftware.android.steam.community.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.valvesoftware.android.steam.community.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-configuration
        android:reqFiveWayNav="false"
        android:reqHardKeyboard="false"
        android:reqKeyboardType="undefined"
        android:reqNavigation="undefined"
        android:reqTouchScreen="finger" />

    <application
        android:name="com.valvesoftware.android.steam.community.SteamCommunityApplication"
        android:icon="@drawable/steam"
        android:label="@string/app_name" >
        <activity
            android:name="com.valvesoftware.android.steam.community.activity.CommunityActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.valvesoftware.android.steam.community.activity.CommunityGroupsActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:launchMode="singleInstance"
            android:screenOrientation="userPortrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.valvesoftware.android.steam.community.activity.SearchFriendsActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:launchMode="singleInstance"
            android:screenOrientation="userPortrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.valvesoftware.android.steam.community.activity.SearchGroupsActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:launchMode="singleInstance"
            android:screenOrientation="userPortrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.valvesoftware.android.steam.community.activity.SettingsActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:screenOrientation="userPortrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.valvesoftware.android.steam.community.activity.LoginActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.valvesoftware.android.steam.community.activity.ChatActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="net.hockeyapp.android.UpdateActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:screenOrientation="userPortrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" />
        <activity
            android:name="com.valvesoftware.android.steam.community.activity.SteamMobileUriActivity"
            android:configChanges="locale|mcc|mnc|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|fontScale"
            android:screenOrientation="userPortrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="steammobile" />
            </intent-filter>
        </activity>

        <service
            android:name="com.valvesoftware.android.steam.community.SteamDBService"
            android:enabled="true" />
        <service android:name="com.valvesoftware.android.steam.community.C2DMProcessor" />

        <receiver
            android:name="com.valvesoftware.android.steam.community.C2DMReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.valvesoftware.android.steam.community" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.valvesoftware.android.steam.community" />
            </intent-filter>
        </receiver>
    </application>

</manifest>